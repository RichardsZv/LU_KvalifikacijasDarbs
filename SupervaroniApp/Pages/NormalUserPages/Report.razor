    List<ReportDataModel> reportList = new List<ReportDataModel>();

    //Ielādējot lapu ielasam datus
    protected async override Task OnInitializedAsync()
    {
        var authstate = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
        var user = authstate.User.Identity;
        runner = runnerData.GetCurrentRunner(user.Name);
        reportList = reportData.GetReportData(runner.Id, DatS, DatB);
    }
    //Pogas ielādes animācija
    private bool _processing = false;
    async Task CreateReport()
    {
        _processing = true;
        await Task.Delay(2000);
        _processing = false;
    }

    //Tabulas funkcijas
    private void ClearEventLog()
    {
        editEvents.Clear();
    }

    private void AddEditionEvent(string message)
    {
        editEvents.Add(message);
        StateHasChanged();
    }

