@using DataAccessLibrary.Models
@using DataAccessLibrary.Data
@using SupervaroniApp.Pages
@using System.ComponentModel.DataAnnotations
@inject IRunnerData runnerData
@inject IReportData reportData
@inject AuthenticationStateProvider GetAuthenticationStateAsync


<MudDialog>
    <DialogContent>
        <EditForm Model="@test">
            <DataAnnotationsValidator />
            <MudGrid>
                <MudItem xs="12" sm="12">
                    <MudCard>
                        <MudCardContent>      
                            <MudDatePicker Label="Datums" @bind-Date="@test.Dat" DateFormat="dd.MM.yyyy"></MudDatePicker>
                            <MudNumericField Label = "Kilometri" @bind-Value="@test.Km"> </MudNumericField>
                            <MudNumericField Label="Pace" @bind-Value="@test.Pace"> </MudNumericField>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            </MudGrid>
        </EditForm>

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Atcelt</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Saglabāt</MudButton>
    </DialogActions>
</MudDialog>
@code {
    TestsModel test = new TestsModel();
    RunnerModel coach = new RunnerModel();
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public int runnerid { get; set; }
    string uname = "";


    protected async override Task OnInitializedAsync()
    {
        var authstate = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
        var user = authstate.User.Identity;
        uname = user.Name;
        coach = runnerData.GetCurrentRunner(uname);
    }
    void Submit()
    {
        test.CoachId = coach.Id;
        test.RunnerId = runnerid;
        runnerData.AddTest(test);
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel() => MudDialog.Cancel();

}
